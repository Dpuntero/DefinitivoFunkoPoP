@model AppFunkoPop.Models.PRODUCTO

@{
    ViewBag.Title = "Productos";

}



<h2>@Model.NOMBREP</h2>


<div class="row">

    <hr />
    <div class="col-sm-12 col-md-12">
        <div class="col-sm-12 col-md-2">
            <img src="~/Content/images/@Model.CATEGORIA/@Model.IMAGEN" class="col-xs-2 col-sm-2 col-md-12" />
            <img src="~/Content/images/@Model.CATEGORIA/@Model.LINK" class="col-xs-2 col-sm-2 col-md-12" />

        </div>
        <div class="col-sm-12 col-md-6">
            <img src="~/Content/images/@Model.CATEGORIA/@Model.IMAGEN" class="col-xs-12 col-sm-12 col-md-12" />
        </div>
        <div class="col-xs-12 col-sm-12 col-md-4">
            <p>
                @AppFunkoPop.Resources.Productos.descripcion:
                @Model.DESCRIP
            </p>
            <h3>@Model.PRECIO €</h3>
            @using (Html.BeginForm("AñadirProductoACarrito", "Carrito", FormMethod.Post))
            {

                <div style='display: none'>
                    ...
                    @Html.TextBoxFor(model => model.PRODUCTO_ID)
                </div>

                <div class="form-group">

                    <label for="unidades">Unidades Disponibles:@Model.UD_DISPO </label>
                    

                    


                </div>
                
                    @Html.TextBox("unidades", ViewBag.Num1 as string, new { @Value = "1" })
                <button type="submit" class="btn btn-default">Añadir al  carrito</button>
            }
        </div>


    </div>

</div>


