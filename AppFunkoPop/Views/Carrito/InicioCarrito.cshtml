@model IEnumerable<AppFunkoPop.Models.ProductoUnidades>
@{
    ViewBag.Title = "MiCarrito";
}



<h2>Listado de productos</h2>
<p>Listado de los productos de su carrito:</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Imagen</th>
            <th>Nombre</th>
            <th>Unidades</th>
            <th>Precio</th>
            <th>Precio Total</th>


        </tr>
    </thead>
    <tbody>




        @foreach (var prod in Model)
        {

            <tr>


                <td><a href="~/Producto/Productos/@prod.PRODUCTO_ID"><img src="~/Content/images/@prod.CATEGORIA/@prod.IMAGEN" style="height: 50px; "></a></td>
                <td>@prod.NOMBRE</td>
                <td>@prod.Unidades</td>
                <td>@prod.PRECIOUnidad</td>
                <td>@prod.PRECIO</td>


            </tr>
        }

    </tbody>


</table>
@using (Html.BeginForm("RealizarPedido", "Pedidos", FormMethod.Post))
{
    <div style='display: none'>
        ...
        @Html.TextBoxFor(model => model)
    </div>


    <input type="submit" name="entrar" value="Realizar pedido" />

}
