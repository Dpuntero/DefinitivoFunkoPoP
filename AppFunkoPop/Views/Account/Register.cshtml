@model AppFunkoPop.Models.USUARIO
@{
    ViewBag.Title = "Registrarse";
}

<h2 style="padding-left:100px;"> @AppFunkoPop.Resources.Account.registrarse</h2>







    <div class="row" style="padding-bottom: 15px; padding-left:100px;">
        <div class="col-sm-9">

            <h4> @AppFunkoPop.Resources.Account.crearNuevaCuenta</h4>

            <hr />

            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
            {
                <br />
                <p>
                    @AppFunkoPop.Resources.Account.nombre
                </p>
                <p>
                    @Html.EditorFor(model => model.NOMBRE)
                </p>
                <p>
                    @*@Html.LabelFor(model => model.APELLIDOS)*@
                    @AppFunkoPop.Resources.Account.apellidos
                </p>
                <p>
                    @Html.EditorFor(model => model.APELLIDOS)
                </p>

                <p>
                    @*@Html.LabelFor(model => model.EMAIL)*@
                    @AppFunkoPop.Resources.Account.email
                </p>
                
                <p>
                    @Html.EditorFor(model => model.EMAIL)
                </p>
                <p>
                    @*@Html.LabelFor(model => model.PASSWD)*@
                    @AppFunkoPop.Resources.Account.passwd
                </p>
                <p>
                    @Html.EditorFor(model => model.PASSWD)
                </p>
                <br />
                <p>
                    @*@Html.LabelFor(model => model.DIRECCION)*@
                    @AppFunkoPop.Resources.Account.direccion
                </p>
                <p>
                    @Html.EditorFor(model => model.DIRECCION)
                </p>
                <p>
                    @*@Html.LabelFor(model => model.TLFN)*@
                    @AppFunkoPop.Resources.Account.tlfn
                </p>
                <p>
                    @Html.EditorFor(model => model.TLFN)
                </p>
                <p>
                    @*@Html.LabelFor(model => model.CIUDAD)*@
                    @AppFunkoPop.Resources.Account.ciudad
                </p>
                <p>
                    @Html.EditorFor(model => model.CIUDAD)
                </p>
                <p>
                    @*@Html.LabelFor(model => model.PAIS)*@
                    @AppFunkoPop.Resources.Account.pais
                </p>
                <p>
                    @Html.EditorFor(model => model.PAIS)
                </p>
                <p>
                    @*@Html.LabelFor(model => model.CP)*@
                    @AppFunkoPop.Resources.Account.codigoPostal
                </p>
                <p>
                    @Html.EditorFor(model => model.CP)
                </p>


                <p>
                    @Html.ValidationMessageFor(model => model.NOMBRE)
                    @Html.ValidationMessageFor(model => model.APELLIDOS)
                    @Html.ValidationMessageFor(model => model.EMAIL)
                    @Html.ValidationMessageFor(model => model.PASSWD)
                    @Html.ValidationMessageFor(model => model.TLFN)
                    @Html.ValidationMessageFor(model => model.DIRECCION)
                    @Html.ValidationMessageFor(model => model.CIUDAD)
                    @Html.ValidationMessageFor(model => model.PAIS)
                    @Html.ValidationMessageFor(model => model.CP)

                </p>
                <label> @Html.DisplayFor(model => model.LoginErrorMessage)</label>
                <input type="submit" name="entrar" value=" @AppFunkoPop.Resources.Account.entrar" />
                <input type="reset" name="borrar" value=" @AppFunkoPop.Resources.Account.borrar" />
            }


            @Html.ValidationSummary()

        </div>
    </div>



