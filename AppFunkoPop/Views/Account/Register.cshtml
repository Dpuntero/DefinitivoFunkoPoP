                    @Html.EditorFor(model => model.CIUDAD)
                </p>
                <p>
                    @*@Html.LabelFor(model => model.PAIS)*@
                    @AppFunkoPop.Resources.Account.pais
                </p>
                <p>
                    @Html.EditorFor(model => model.PAIS)
                </p>
                <p>
                    @*@Html.LabelFor(model => model.CP)*@
                    @AppFunkoPop.Resources.Account.codigoPostal
                </p>
                <p>
                    @Html.EditorFor(model => model.CP)
                </p>


                <p>
                    @Html.ValidationMessageFor(model => model.NOMBRE)
                    @Html.ValidationMessageFor(model => model.APELLIDOS)
                    @Html.ValidationMessageFor(model => model.EMAIL)
                    @Html.ValidationMessageFor(model => model.PASSWD)
                    @Html.ValidationMessageFor(model => model.TLFN)
                    @Html.ValidationMessageFor(model => model.DIRECCION)
                    @Html.ValidationMessageFor(model => model.CIUDAD)
                    @Html.ValidationMessageFor(model => model.PAIS)
                    @Html.ValidationMessageFor(model => model.CP)

                </p>
                <label> @Html.DisplayFor(model => model.LoginErrorMessage)</label>
                <input type="submit" name="entrar" value=" @AppFunkoPop.Resources.Account.entrar" />
                <input type="reset" name="borrar" value=" @AppFunkoPop.Resources.Account.borrar" />
            }

