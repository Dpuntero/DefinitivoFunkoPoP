@model IEnumerable<AppFunkoPop.Models.PRODUCTO>

<h2>@AppFunkoPop.Resources.Catalogo.catalogo</h2>


<div class="row">
    <form action="Catalogo" method="post">

        <div class=" col-sm-6 ">
            <p>@AppFunkoPop.Resources.Catalogo.seleccionaCategoria</p>
            <select name="categoria" class="custom-select custom-select-lg mb-3">
                <option selected value="todos">Todos</option>
                <option value="got">Juego De Tronos</option>
                <option value="Marvel">Marvel</option>
                <option value="StarWars">Star Wars</option>
            </select>
        </div>
        <div class=" col-sm-6 ">
            <p>@AppFunkoPop.Resources.Catalogo.seleccionaSubCategoria:</p>
            <select name="subcategoria" class="custom-select custom-select-lg mb-3">
                <option selected>Ninguna</option>
                <option value="JuegoDeTronos">Juego De Tronos</option>
                <option value="Marvel">Marvel</option>
                <option value="StarWars">Star Wars</option>
            </select>
        </div>
        <button type="submit" class="btn btn-default">@AppFunkoPop.Resources.Catalogo.filtrar</button>
    </form>
</div>


<hr />
<div class="row">

    @foreach (var prod in Model)
    {



        <div class="col-sm-6 col-md-3">
            <div class="thumbnail">
                <img src="~/Content/images/@prod.CATEGORIA/@prod.IMAGEN" style= "height: 250px; "/>
                <div class="caption">
                    <h3>@prod.NOMBREP</h3>
                    <p>@prod.DESCRIP</p>
                    <p>
                        <a href="~/Producto/Productos/@prod.PRODUCTO_ID" class="btn btn-primary" role="button">Ver Producto</a>

                        @using (Html.BeginForm("RecogerIdEnviarProducto", "Carrito", FormMethod.Post))
                        {
                        <div style='display: none'>
                            
                            @Html.TextBox("id", ViewBag.Num1 as string, new { @Value = prod.PRODUCTO_ID })
                            @Html.TextBox("unidades", ViewBag.Num1 as string, new { @Value = "1" })
                        </div>
                           
                            <button type="submit" class="btn btn-default">@AppFunkoPop.Resources.Productos.añadirCarrito</button>
                        }



                    </p>
                </div>
            </div>
        </div>


    }
</div>

<div class="row">
    <ul class="pagination justify-content-end">
        <li class="page-item"><a class="page-link" href="javascript:void(0);">@AppFunkoPop.Resources.Catalogo.anterior</a></li>
        <li class="page-item"><a class="page-link" href="javascript:void(0);">1</a></li>
        <li class="page-item"><a class="page-link" href="javascript:void(0);">2</a></li>
        <li class="page-item"><a class="page-link" href="javascript:void(0);">@AppFunkoPop.Resources.Catalogo.siguiente</a></li>
    </ul>
</div>


