@{
    ViewBag.Title = "MisPedidos";
}



<h2>Listado de pedidos</h2>
<p>Listado de sus pedidos y su estado:</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Nº de pedido</th>
            <th>Artículos</th>
            <th>Precio total</th>
            <th>Status</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var prod in Model)
        {
            <tr>
                <td>@prod.PEDIDO_ID</td>
                <td>
                    @foreach (var prod2 in prod.PEDIDOPRODUCTOes)
                    {
                        <img src="~/Content/images/@prod2.PRODUCTO.IMAGEN" width="100 px" />
                        @prod2.PRODUCTO.NOMBREP 
                        
                        <br />
                    }
                </td>
                <td>@prod.PRECIO_TOTAL</td>
                <td>@prod.ESTADO_ENVIO1.TEXTO_ESTADO</td>
            </tr>
        }
    </tbody>
</table>

