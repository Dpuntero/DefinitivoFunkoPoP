
@{
    if (Session["USUARIO_ID"] == null)
    {
        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("Registrarse", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
            <li>@Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
            <li>@Html.ActionLink("Carrito", "InicioCarrito", "Carrito")</li>
        </ul>
    }
    else
    {
        if (Session["ID_ROL"].ToString() == "1")
        {
            <ul class="nav navbar-nav navbar-right">

                <li>@Html.ActionLink("Hola " + Session["NOMBRE"].ToString(), "PanelDeControlUsuarios", "Usuarios", routeValues: null, htmlAttributes: new { id = "perfilUsuario" })</li>
                <li>@Html.ActionLink("Cerrar Sesión", "CerrarSesion", "Account", routeValues: null, htmlAttributes: new { id = "cerrarsesion" })</li>

                <li>@Html.ActionLink("Carrito", "InicioCarrito", "Carrito")</li>

            </ul>

        }
        else if (Session["ID_ROL"].ToString() == "2")
        {
            <ul class="nav navbar-nav navbar-right">

                <li>@Html.ActionLink("Bienvenido administrador " + Session["NOMBRE"].ToString(), "PanelDeControlAdmin", "Admin", routeValues: null, htmlAttributes: new { id = "perfilAdmin" })</li>
                <li>@Html.ActionLink("Cerrar Sesión", "CerrarSesion", "Account", routeValues: null, htmlAttributes: new { id = "cerrarsesion" })</li>

 

            </ul>
        }



    }
}



