<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript">
        var optmarvel = new Array("Todos", "Vengadores", "X-men","Otros");
        var optgot = new Array("Todos", "Lanister", "Targaryen", "El norte");
        var optstarwars = new Array("Todos", "Episodio 3", "El ultimo Jedi","El retorno del Jedi");

        function cambiar() {
            var categoria;
            categoria = document.frm.categoria[document.frm.categoria.selectedIndex].value;
            if (categoria != 0) {
                misOpts = eval("opt" + categoria);
                numOpts = misOpts.length;
                document.frm.subcategoria.length = numOpts;

                for (i = 0; i < numOpts; i++) {
                    document.frm.subcategoria.options[i].value = misOpts[i];
                    document.frm.subcategoria.options[i].text = misOpts[i];
                }
            }
            
        }


    </script>
    <style>
        .affix {
            top: 0px;
            width: 100%;
            z-index: 9999 !important;
        }

            .affix + .container-fluid {
                padding-top: 0px;
            }

        #footer {
            background-color: #00A2E8;
        }

        #tituloFooter {
            font-size: 20px;
            text-decoration-line: underline;
            text-decoration-color: yellow;
        }

        .imagenes {
            padding-top: 30px;
            text-align: center;
            padding-bottom: 30px;
        }

        footer {
            color: white;
            height: 250px;
            background-color: slategrey;
        }

        header {
            margin-top: 0px;
        }

        body {
            padding: 0px;
        }

        footer a {
            color: white;
            text-decoration: none;
        }
    </style>

</head>
<body>
    <div style="background-color:slategrey;">
        <a class="navbar-brand-flags" href="@Url.Action("Change", "Language" , new { LanguageAbbreviation="en" }, null)" style=" padding-left:10px;">
