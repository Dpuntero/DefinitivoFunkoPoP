            <div class="row">

                @Html.Partial("MenuLateral")
                <div class=" col-sm-9 ">
                    @RenderBody()
                </div>
            </div>
        </div>
        <hr />


    </div>
    <footer class="page-footer font-small blue pt-4">
        <div id="footer" class="container-fluid text-center text-md-left">
            <div class="row">
