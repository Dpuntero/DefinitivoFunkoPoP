        var optmarvel = new Array("Todos", "Vengadores", "X-men","Otros");
        var optgot = new Array("Todos", "Lanister", "Targaryen", "El norte");
        var optstarwars = new Array("Todos", "Episodio 3", "El ultimo Jedi","El retorno del Jedi");

        function cambiar() {
            var categoria;
            categoria = document.frm.categoria[document.frm.categoria.selectedIndex].value;
            if (categoria != 0) {
                misOpts = eval("opt" + categoria);
                numOpts = misOpts.length;
                document.frm.subcategoria.length = numOpts;

                for (i = 0; i < numOpts; i++) {
                    document.frm.subcategoria.options[i].value = misOpts[i];
                    document.frm.subcategoria.options[i].text = misOpts[i];
                }
            }
            
        }


    </script>
