                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("POP-Shop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(AppFunkoPop.Resources.Shared.inicio, "Index", "Home")</li>
                    <li>@Html.ActionLink(AppFunkoPop.Resources.Shared.catalogo, "Catalogo", "Catalogo")</li>
                    <li>@Html.ActionLink(AppFunkoPop.Resources.Shared.contacto, "Contacto", "Otros")</li>
