@model AppFunkoPop.Models.USUARIO
@{
    if (Session["ID_ROL"] == null)
    {
        Response.Redirect("~/Home/Index");
    }

    ViewBag.Title = "GestionDatos";
}



<h2 style="padding-left:100px;">@ViewBag.Title.</h2>




<div>


    <div class="row" style="padding-bottom: 15px; padding-left:100px;">
        <div class="col-sm-9">

            <h4>Cree una cuenta nueva.</h4>
            <hr />
            @using (Html.BeginForm("ActualizarUsuario", "Account", FormMethod.Post))
            {
                <p>
                    @Html.LabelFor(model => model.NOMBRE)
                </p>
                <p>
                    @Html.TextBoxFor(model => model.NOMBRE)
                    
